<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class = "form-group">
        <div class = "control-label col-sm-2">
                <span class = "heading"><%= f.label :Name %></span>
        </div>
        <div class = "col-sm-8">
            <%= f.text_field :name, class:"form-control", placeholder: "Case Type", autofocus: true %>
        </div>
    </div>
    <div class = "form-group">
        <div class = "col-sm-2 col-sm-10">
            <div class = "col-sm-offset-2">
                <%= f.submit class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
    </div>
<% end %>

<div class = "col-xs-4 col-xs-offset-4">
    [<%= link_to "Cancel request and return to clients listing", clients_path %>]
</div>