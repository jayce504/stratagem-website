<span class = "heading"><h1 align="center">Your Case Types</h1></span>
    <div align = "center">
        <%= will_paginate %>
        <% @categories.each do |category| %>
            <ul class = "listing">
                <div class = "row">
                    <div class = "well col-md-4 col-md-offset-4">
                        <li class = "client-name">
                            <%= link_to "#{category.name}", category_path(category) %>
                        </li>
                        <li><small><%= pluralize(category.clients.count, "client") %></small></li>
                    </div>
                </div>
            </ul>
        <% end %>
        <%= will_paginate %>
    </div>