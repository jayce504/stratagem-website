<h1>Clients</h1>
<h2 align="center">Name: <%= @client.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
<h4>Address: </h4><%= simple_format(@client.address) %>
<h4>Phone Number: </h4><%= simple_format(@client.phone_number) %>
<h4>Appointed or Retained: </h4><%= simple_format(@client.appointed_retained) %>
<h4>Alleged Offenses: </h4><%= simple_format(@client.alleged_offenses) %>
    <div class="client-actions">
        <%= link_to "Update this client", edit_client_path(@client), class:"btn btn-xs btn-primary" %>
        <%= link_to "Delete this client", client_path(@client), method: :delete, data: { confirm:"Are you sure you want to delete this client?" }, class:"btn btn-xs btn-danger" %>
        <%= link_to "Client List", clients_path, class: "btn btn-xs btn-success" %>
    </div>
</div>

    

    

   


