<h1>All of your clients</h1>
<p>
    <%= link_to "Register new client", new_client_path %>
</p>
<table>
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Appointed or Retained</th>
        <th>Alleged Offenses</th>
    </tr>
    <% @clients.each do |client| %>
    <tr>
        <td><%=client.name%></td>
        <td><%=client.address%></td>
        <td><%=client.phone_number%></td>
        <td><%=client.appointed_retained%></td>
        <td><%=client.alleged_offenses%></td>
        <td><%=link_to 'Edit', edit_client_path(client)%></td>
        <td><%=link_to 'Show', client_path(client)%></td>
        <td><%=link_to 'Delete', 
            client_path(client), 
            method: :delete, 
            data: {confirm: "Are you sure?"} %>
        </td>
    </tr>
    <% end %>
</table>